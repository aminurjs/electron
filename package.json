{
  "name": "genmeta-app",
  "version": "1.0.1",
  "description": "Metadata generator",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.genmeta.app",
    "productName": "GenMeta",
    "files": [
      "src/**/*",
      "package.json",
      "LICENSE"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false
  },
  "repository": "https://github.com/aminurjs/genmeta-app",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "keywords": [
    "genmeta",
    "seo",
    "metadata",
    "keywords"
  ],
  "author": "Aminur Rahman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aminurjs/genmeta-app/issues"
  },
  "homepage": "https://github.com/aminurjs/genmeta-app#readme",
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "dist-exiftool": "^10.53.0",
    "electron-updater": "^6.6.2",
    "mime": "^4.0.7",
    "node-exiftool": "^2.3.0",
    "sharp": "^0.34.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "electron": "^35.1.4",
    "electron-builder": "^24.13.3",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "nodemon": "^3.1.9"
  }
}
